{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "deps": { "dependsOn": ["^deps"] },
    "//#deps": { "dependsOn": ["^deps"] },

    "dev": { "cache": false, "persistent": true },
    "codegen": { "cache": false },

    "build": {
      "dependsOn": ["^build"],
      "env": ["*"],
      "outputs": [".svelte-kit/**", ".vercel/**"]
    },

    "check": {},

    "lint": { "dependsOn": ["deps"] },
    "//#lint": { "dependsOn": ["deps"] },
    "lint:fix": { "dependsOn": ["deps"] },
    "//#lint:fix": { "dependsOn": ["deps"] },

    "//#format": { "dependsOn": ["deps"] },
    "//#format:fix": { "dependsOn": ["deps"] }
  }
}
