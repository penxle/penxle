{
  "name": "@penxle/monorepo",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "bootstrap": "pnpm install && husky install",
    "build:actions": "turbo run build --filter './actions/**'",
    "build:deps": "turbo run build --filter './packages/**' --filter './infra/lib'",
    "codegen": "turbo run codegen",
    "dev": "turbo run dev --filter './sites/**' --concurrency 255",
    "fix": "pnpm run '/^fix:.+$/'",
    "fix:eslint": "pnpm lint:eslint --fix",
    "fix:prettier": "pnpm lint:prettier --write",
    "lint": "pnpm run '/^lint:.+$/'",
    "lint:eslint": "eslint --max-warnings 0 .",
    "lint:prettier": "prettier --check --ignore-unknown '**/*'",
    "lint:spellcheck": "cspell --no-progress --relative '**/*'",
    "lint:svelte": "turbo run lint:svelte",
    "lint:syncpack": "syncpack lint",
    "lint:typecheck": "turbo run lint:typecheck"
  },
  "devDependencies": {
    "@penxle/lintconfig": "workspace:^",
    "cspell": "^7.0.1",
    "eslint": "^8.48.0",
    "gitmoji-cli": "^8.4.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.2",
    "syncpack": "^11.2.1",
    "turbo": "^1.10.13",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": "^18 || ^20",
    "pnpm": "^8.6.0"
  },
  "pnpm": {
    "allowedDeprecatedVersions": {
      "@opentelemetry/api-metrics": "*",
      "debuglog": "*",
      "querystring": "*",
      "readdir-scoped-modules": "*",
      "read-package-tree": "*",
      "vm2": "*"
    }
  }
}
