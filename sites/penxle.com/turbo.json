{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "pipeline": {
    "codegen": {
      "dotEnv": [".env"],
      "dependsOn": ["codegen:prisma"],
      "outputs": [".svelte-kit/**", "$houdini/**"]
    },
    "codegen:prisma": { "cache": false },
    "build": {
      "dotEnv": [".env"],
      "outputs": [".svelte-kit/**", ".vercel/**"]
    }
  }
}
